<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/closeSearchBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_close"
                android:layout_marginTop="20dp"
               android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>



            <TextView
                android:id="@+id/textViewFilterSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="FILTERS / SORT"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />



    <RelativeLayout
        android:id="@+id/RL2"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                >

                <Button
                    android:id="@+id/applySortFilterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:text="APPLY"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:layout_marginRight="20dp"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/clearAllBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="RESET"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_toLeftOf="@+id/applySortFilterBtn"
                    android:layout_marginRight="20dp"
                    style="?android:attr/borderlessButtonStyle"
                    />



            </RelativeLayout>

            <TextView
                android:id="@+id/sortbyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Sort by:"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>


            <com.adroitandroid.chipcloud.ChipCloud
                android:id="@+id/chipSortCloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp">

            </com.adroitandroid.chipcloud.ChipCloud>

        </LinearLayout>


    </RelativeLayout>

        <TextView
            android:id="@+id/filterBelowTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Filters :"/>

        <TextView
            android:id="@+id/selectSizeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:text="Select size :"/>

        <com.adroitandroid.chipcloud.ChipCloud
            android:id="@+id/chipSizeCloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

        </com.adroitandroid.chipcloud.ChipCloud>

        <TextView
            android:id="@+id/selectColourTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:text="Select colour :"/>

        <com.adroitandroid.chipcloud.ChipCloud
            android:id="@+id/chipColourCloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

        </com.adroitandroid.chipcloud.ChipCloud>


    </LinearLayout>


</ScrollView>