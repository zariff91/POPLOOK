<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="160dp"
    android:layout_height="250dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/styleWithImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:visibility="visible"
        />
    <ProgressBar
        android:id="@+id/loadingImageStyleWith"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:indeterminate="true"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/styleWithTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:text="Everly Princess Cut Chiffon Jubah Dress - Cream Flora"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:maxLines="2"/>
    <TextView
        android:id="@+id/styleWithPrice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:textSize="12dp"
        android:text="RM 129.00"
        android:gravity="center|top"
        android:maxLines="1"/>



</LinearLayout>
    </FrameLayout>