<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/firstLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank You!"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/secondLabel"
        android:layout_below="@+id/firstLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your order #23423423234 has been confirmed"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <Button
    android:id="@+id/continueButton"
        android:layout_below="@+id/secondLabel"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="50dp"
    android:layout_marginRight="15dp"
        android:text="CONTINUE SHOPPING"
        android:textSize="15dp"
        android:textColor="@color/white"
    android:layout_marginLeft="15dp"
        android:background="@color/loyalty_green"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/orderHistoryButton"
        android:layout_below="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ORDER HISTORY"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/loyalty_green"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:id="@+id/below_label"
        android:layout_below="@+id/orderHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order summary :"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"/>


</RelativeLayout>