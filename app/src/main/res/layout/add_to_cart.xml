<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/sizeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Size"
        android:textColor="@color/black"/>

    <!--<android.support.design.chip.ChipGroup-->
        <!--android:id="@+id/sizeChipGroup"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_marginTop="10dp"-->

        <!--/>-->

    <com.adroitandroid.chipcloud.ChipCloud
        android:id="@+id/chipSizeCloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp">

    </com.adroitandroid.chipcloud.ChipCloud>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:textSize="20dp"
            android:text="Quantity"
            android:textColor="@color/black"/>

        <Button
        android:id="@+id/addBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_add_2_active"
/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/addBtn"
            android:id="@+id/selectedAmount"
            android:textColor="@color/black"
            android:layout_marginTop="26dp"
            android:layout_marginRight="25dp"
            android:textSize="23dp"
            android:text="2"



            />

        <Button
            android:id="@+id/minusBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/selectedAmount"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_minus_2" />


    </RelativeLayout>




    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/accent"
        android:text="Add To Cart"
        android:textSize="15dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"

        />
</LinearLayout>